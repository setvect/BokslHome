{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Backend: Build",
      "type": "shell",
      "command": "./gradlew build",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": []
    },
    {
      "label": "Backend: Boot Run",
      "type": "shell",
      "command": "./gradlew bootRun",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": []
    },
    {
      "label": "Frontend: Install",
      "type": "shell",
      "command": "npm install",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": []
    },
    {
      "label": "Frontend: Dev",
      "type": "shell",
      "command": "npm run dev",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": []
    },
    {
      "label": "Build All",
      "dependsOn": [
        "Backend: Build"
      ],
      "group": "build",
      "problemMatcher": []
    }
  ]
}
