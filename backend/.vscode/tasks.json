{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Gradle: Build",
      "type": "shell",
      "command": "./gradlew build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Gradle: Clean Build",
      "type": "shell",
      "command": "./gradlew clean build",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Gradle: Boot Run",
      "type": "shell",
      "command": "./gradlew bootRun",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Gradle: Classes",
      "type": "shell",
      "command": "./gradlew classes",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Gradle: Run with Debug",
      "type": "shell",
      "command": "./gradlew bootRun --debug-jvm",
      "isBackground": true,
      "problemMatcher": [{
          "pattern": [{
              "regexp": "\\b(Listening for transport dt_socket at address:)\\b",
              "file": 1,
              "location": 2,
              "message": 3
          }],
          "background": {
              "activeOnStart": true,
              "beginsPattern": "^> Task :.*",
              "endsPattern": "Listening for transport dt_socket at address:"
          }
      }]
    },
    {
      "label": "Gradle: Test",
      "type": "shell",
      "command": "./gradlew test",
      "group": "test",
      "problemMatcher": []
    }
  ]
}

